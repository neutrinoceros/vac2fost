!===========================
! add dust (2D case)
!===========================


&hd_list
  hd_dust = .true.
/

&dust_list
  dust_n_species = 3
  gas_mu = 2d0
  dust_temperature = 0d0
  dust_min_rho = 1d-15
  dust_method = 'none'    !use 'Kwok' for coupling
/

&usr_dust_list
  gas2dust_ratio = 1d2
  intrinsic_grain_density = 1d0  ! 1g/cm^3
  grain_size = 1d0, 1d-1, 1d-2   ! 1cm
/

&filelist
  base_filename = 'dusty'
/

&boundlist
  nghostcells = 2

  !> radial boundaries
  typeboundary_min1 = 'special','cont','special', 9*'cont'
  typeboundary_max1 = 'special','noinflow','special', 9*'cont'

  !> azimuthal boundaries
  typeboundary_min2 = 12*'periodic'
  typeboundary_max2 = 12*'periodic'
/

&methodlist
    flux_scheme = 20*'hll' ! because hllc with dust_method 'Kwok' and 'none' is broken
/
