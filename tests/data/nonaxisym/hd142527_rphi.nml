! ======================================
!
! trigger RWI at the edge of a cavity
! in a transistion disk
!
! physical parameters are adjusted to
! HD 142527, but we don't simulate the
! eccentric binary here.
!
! ======================================

&disk_list
    ref_radius = 1.57
    central_mass = 2.2
    rho_slope = -1.0
    rho0 = 9.2e-4
    wk_amp = 50d0
/

&usr_list
    usr_geometry = 'rphi'
    cavity_radius = 1.57   ! in 100au, with d=157pc (Gaia 2016) and angular width ~2''
    cavity_width = 0.12   ! 100au, constrained by Rayleigh and Lovelace criteria
    rhomin = 1e-13
/

&perturbation_list
    pert_noise = .true.
    pert_moment = 1
    pert_amp = 1d-2
/

! -----------------------------------------------------------------

&meshlist
    refine_max_level = 1
    xprobmin1 = 0.9
    xprobmax1 = 4.5
    domain_nx1 = 512
    block_nx1 = 64
    xprobmin2 = 0.0
    xprobmax2 = 1.0
    domain_nx2 = 128
    block_nx2 = 64
/

&boundlist
    nghostcells = 2
    typeboundary_min1 = 'special', 'cont', 'special'
    typeboundary_max1 = 'special', 'noinflow', 'special'
    typeboundary_min2 = 'periodic', 'periodic', 'periodic'
    typeboundary_max2 = 'periodic', 'periodic', 'periodic'
/

&filelist
    base_filename = 'hd142527_rphi'
    convert_type = 'vtuBCCmpi'
    autoconvert = .true.
    nocartesian = .true.
/

&hd_list
    hd_gamma = 1.666
    hd_adiab = 86.4
    hd_energy = .false.
    hd_gravity = .true.
    hd_dust = .false.
/

&savelist
    itsave(1, 1) = 0
    itsave(1, 2) = 0
    dtsave_log = 1d-1
    dtsave_dat = 2d0
/

&stoplist
    time_max = 100
/

&methodlist
    small_density = 1e-15
    time_integrator = 'twostep'
    flux_scheme = 20*'hll'
    limiter = 20*'koren'
    gradient_limiter = 20*'koren'
/
