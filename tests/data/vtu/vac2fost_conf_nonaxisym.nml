&mcfost_output
    n_rad   = 128
    n_az = 64
    n_z   = 10
    n_rad_in = 2
    Mstar    = 1.8  ! [M_sun] (Casassus et al 2015)
    Teff    = 6550 ! [K]     (Mendiguita et al 2014)
    distance  = 157  ! [pc]    (Gaia consortium 2016)

    flaring_exp = 1.125
    scale_height = 10.0
    reference_radius = 100.0
/

&amrvac_input
    hydro_data_dir = 'nonaxisym' ! relative to the present configuration file
    config = 'hd142527_rphi.nml', 'dust_rphi.par'
    nums = 20
/

&units
    distance2au = 100
/

&dust
    gas_to_dust_ratio = 100
    grain_size2micron = 1e4
    grain_sizes = "usr_dust_list.grain_size_cm"
/